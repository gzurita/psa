<h2>List of Employees</h2>

<div class="container">
 <table class="table table-condensed">
    <thead>
      <tr>
        <th>Id</th>
        <th>Last Name</th>
        <th>First Name</th>
      </tr>
    </thead>
    <tbody>

<% @employees.each do |e| %>
      <tr>
        <td><%= e.id %></td>
        <td><%= e.last_name %></td>
        <td><%= e.first_name %></td>
      </tr>
<% end%>

    </tbody>
  </table>
  <button type="button" class="btn btn-primary" onclick="window.location.href = '/new_employee';">New Employee</button>
</div>