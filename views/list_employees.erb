<h2>List of Employees</h2>

<div class="container">
 <table class="table table-condensed">
    <thead>
      <tr>
        <th>Id</th>
        <th>Last Name</th>
        <th>First Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>

<% @employees.each do |e| %>
      <tr>
        <td><%= e.id %></td>
        <td><%= e.last_name %></td>
        <td><%= e.first_name %></td>
        <td>
          <a href="/employees/<%= e.id %>" class="btn btn-info" role="button">Edit</a>
          <a href="/delete_employee/<%= e.id %>" class="btn btn-info" role="button">Delete</a>
        </td>
      </tr>
<% end %>

    </tbody>
  </table>
  <button type="button" class="btn btn-primary" onclick="window.location.href = '/new_employee';">New Employee</button>
</div>